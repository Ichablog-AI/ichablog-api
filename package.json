{
    "name": "ichablog-api",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "dev": "bun run --hot src/index.ts",
        "reinstall": "rm -rf node_modules bun.lockb && bun install",
        "docker": "docker compose --env-file docker/.env -f docker/docker-compose.yml",
        "docker:start": "bun run docker up -d",
        "docker:stop": "bun run docker down",
        "docker:build": "bun run docker build",
        "docker:restart": "bun run docker:stop && bun run docker:start",
        "docker:bun": "docker exec -it ichablog_bun ash",
        "prepare": "if [ \"$CI\" = \"true\" ]; then echo 'CI detected: skipping lefthook install'; else bunx lefthook install; fi",
        "typeorm": "bun run scripts/typeorm/run.sh",
        "typeorm:generate": "bun run typeorm migration:generate src/database/migrations/AutoMigration",
        "typeorm:run": "bun run typeorm migration:run",
        "typeorm:revert": "bun run typeorm migration:revert",
        "typeorm:drop": "bun run typeorm schema:drop",
        "typeorm:show": "bun run typeorm migration:show",
        "lint": "bun biome check .",
        "lint:fix": "bun biome check --write"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "@faker-js/faker": "^9.7.0",
        "@types/bun": "latest",
        "lefthook": "^1.11.10"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@keyv/redis": "^4.3.4",
        "hono": "^4.7.7",
        "keyv": "^5.3.3",
        "keyv-file": "^5.1.2",
        "meilisearch": "^0.50.0",
        "minio": "^8.0.5",
        "mysql2": "^3.14.0",
        "node-resque": "^9.3.8",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "reflect-metadata": "^0.2.2",
        "sqlite3": "^5.1.7",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.22"
    }
}
